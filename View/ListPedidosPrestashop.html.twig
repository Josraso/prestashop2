{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="fas fa-shopping-cart"></i> Pedidos PrestaShop
            </h1>
        </div>
    </div>

    {# Si NO hay filtros, mostrar mensaje compacto #}
    {% if not fsc.hasFilters %}
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i>
            <strong>Utiliza los filtros para buscar pedidos.</strong> Puedes filtrar por ID, referencia, fecha, estado o importación.
        </div>
    {% endif %}

    {# Filtros COMPACTOS #}
    <div class="card shadow mb-4">
        <div class="card-header py-2">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter"></i> Filtros de Búsqueda
            </h6>
        </div>
        <div class="card-body">
            <form method="get" action="{{ fsc.url() }}">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">ID desde:</label>
                        <input type="number" name="id_from" value="{{ fsc.filterIdFrom }}" class="form-control form-control-sm" placeholder="0" min="0"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">ID hasta:</label>
                        <input type="number" name="id_to" value="{{ fsc.filterIdTo }}" class="form-control form-control-sm" placeholder="0" min="0"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Referencia:</label>
                        <input type="text" name="reference" value="{{ fsc.filterReference }}" class="form-control form-control-sm" placeholder="XKBKNAET"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Fecha desde:</label>
                        <input type="date" name="date_from" value="{{ fsc.filterDateFrom }}" class="form-control form-control-sm"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Fecha hasta:</label>
                        <input type="date" name="date_to" value="{{ fsc.filterDateTo }}" class="form-control form-control-sm"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Estado PrestaShop:</label>
                        <select name="state" class="form-control form-control-sm">
                            <option value="0">Todos los estados</option>
                            {% for id, estado in fsc.estadosPrestaShop %}
                                <option value="{{ id }}" {% if fsc.filterState == id %}selected{% endif %}>{{ estado.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Importación:</label>
                        <select name="importado" class="form-control form-control-sm">
                            <option value="todos" {% if fsc.filterImportado == 'todos' %}selected{% endif %}>Todos</option>
                            <option value="importado" {% if fsc.filterImportado == 'importado' %}selected{% endif %}>Importados</option>
                            <option value="pendiente" {% if fsc.filterImportado == 'pendiente' %}selected{% endif %}>Pendientes</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2">
                        <label class="small mb-1">Mostrar:</label>
                        <select name="limit" class="form-control form-control-sm">
                            <option value="50" {% if fsc.limit == 50 %}selected{% endif %}>50</option>
                            <option value="100" {% if fsc.limit == 100 %}selected{% endif %}>100</option>
                            <option value="200" {% if fsc.limit == 200 %}selected{% endif %}>200</option>
                            <option value="500" {% if fsc.limit == 500 %}selected{% endif %}>500</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2 align-self-end">
                        <button type="submit" class="btn btn-primary btn-sm btn-block">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2 align-self-end">
                        <a href="{{ fsc.url() }}" class="btn btn-secondary btn-sm btn-block">
                            <i class="fas fa-times"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Solo mostrar estadísticas y tabla si hay filtros #}
    {% if fsc.hasFilters %}
        {# Estadísticas #}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-left-primary shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Encontrados</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.totalPedidos }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-left-success shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Importados</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.importados }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-left-warning shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pendientes</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.pendientes }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tabla de pedidos #}
        <div class="card shadow">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-table"></i> Pedidos (Página {{ fsc.page }} de {{ fsc.totalPages }})
                </h6>
                <form method="post" action="{{ fsc.url() }}" style="display: inline;">
                    <input type="hidden" name="action" value="export-csv"/>
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="fas fa-file-excel"></i> Exportar CSV
                    </button>
                </form>
            </div>
            <div class="card-body">
                {% if fsc.pedidos|length > 0 %}
                    <form method="post" id="formImportSelected">
                        <input type="hidden" name="action" value="import-selected"/>

                        {# Botones importar seleccionados #}
                        <div class="mb-3">
                            <button type="submit" class="btn btn-sm btn-primary" id="btnImportSelected" disabled>
                                <i class="fas fa-download"></i> Importar Seleccionados (<span id="selectedCount">0</span>)
                            </button>
                            <button type="button" class="btn btn-sm btn-secondary" id="btnSelectAll">
                                <i class="fas fa-check-square"></i> Seleccionar Todos Pendientes
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th width="30"></th>
                                        <th>ID</th>
                                        <th>Referencia</th>
                                        <th>Cliente</th>
                                        <th class="text-right">Total</th>
                                        <th>Fecha</th>
                                        <th>Estado PrestaShop</th>
                                        <th class="text-center">Importado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pedido in fsc.pedidos %}
                                    <tr class="{% if pedido.importado %}table-success{% endif %}">
                                        <td>
                                            {% if not pedido.importado %}
                                                <input type="checkbox" name="order_ids[]" value="{{ pedido.id }}" class="order-checkbox"/>
                                            {% endif %}
                                        </td>
                                        <td><strong>{{ pedido.id }}</strong></td>
                                        <td><code>{{ pedido.reference }}</code></td>
                                        <td>
                                            {{ pedido.customer_name }}<br>
                                            <small class="text-muted">ID: {{ pedido.customer_id }}</small>
                                        </td>
                                        <td class="text-right">
                                            <strong>{{ pedido.total|number_format(2, ',', '.') }}€</strong>
                                        </td>
                                        <td>
                                            <small>{{ pedido.date|date('d/m/Y H:i') }}</small>
                                        </td>
                                        <td>
                                            {% if fsc.estadosPrestaShop[pedido.state] is defined %}
                                                <span class="badge badge-{{ fsc.estadosPrestaShop[pedido.state].color }}">
                                                    {{ fsc.estadosPrestaShop[pedido.state].nombre }}
                                                </span>
                                            {% else %}
                                                <span class="badge badge-secondary">Estado {{ pedido.state }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if pedido.importado %}
                                                <span class="badge badge-success" style="color: white;">
                                                    <i class="fas fa-check"></i> Sí
                                                </span>
                                                {% if pedido.idalbaran %}
                                                    <br><small class="text-muted">Alb. #{{ pedido.idalbaran }}</small><br>
                                                    <a href="EditAlbaranCliente?code={{ pedido.idalbaran }}" target="_blank" class="badge badge-primary mt-1">
                                                        <i class="fas fa-file-alt"></i> Ver
                                                    </a>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge badge-warning" style="color: #333;">
                                                    <i class="fas fa-clock"></i> No
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if not pedido.importado %}
                                                <form method="post" style="display: inline;">
                                                    <input type="hidden" name="action" value="import-order"/>
                                                    <input type="hidden" name="order_id" value="{{ pedido.id }}"/>
                                                    <button type="submit" class="btn btn-sm btn-primary" title="Importar ahora">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                </form>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </form>

                    {# Paginación #}
                    {% if fsc.totalPages > 1 %}
                        {% set paginationURL = fsc.url() ~ '?page={PAGE}&limit=' ~ fsc.limit ~ '&id_from=' ~ fsc.filterIdFrom ~ '&id_to=' ~ fsc.filterIdTo ~ '&reference=' ~ fsc.filterReference ~ '&date_from=' ~ fsc.filterDateFrom ~ '&date_to=' ~ fsc.filterDateTo ~ '&state=' ~ fsc.filterState ~ '&importado=' ~ fsc.filterImportado %}
                        <nav aria-label="Paginación" class="mt-3">
                            <ul class="pagination justify-content-center">
                                {% if fsc.page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': '1'}) }}"><i class="fas fa-angle-double-left"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': (fsc.page - 1)}) }}"><i class="fas fa-angle-left"></i></a>
                                    </li>
                                {% endif %}

                                {% for i in range(max(1, fsc.page - 2), min(fsc.totalPages, fsc.page + 2)) %}
                                    <li class="page-item {% if i == fsc.page %}active{% endif %}">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {% if fsc.page < fsc.totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': (fsc.page + 1)}) }}"><i class="fas fa-angle-right"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': fsc.totalPages}) }}"><i class="fas fa-angle-double-right"></i></a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>No se encontraron pedidos con los criterios seleccionados.</strong>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

<style>
.border-left-primary { border-left: 0.25rem solid #4e73df !important; }
.border-left-success { border-left: 0.25rem solid #1cc88a !important; }
.border-left-warning { border-left: 0.25rem solid #f6c23e !important; }

/* Asegurar que el texto de los badges siempre sea visible */
.badge-primary { background-color: #007bff !important; color: #fff !important; }
.badge-secondary { background-color: #6c757d !important; color: #fff !important; }
.badge-success { background-color: #28a745 !important; color: #fff !important; }
.badge-danger { background-color: #dc3545 !important; color: #fff !important; }
.badge-warning { background-color: #ffc107 !important; color: #212529 !important; }
.badge-info { background-color: #17a2b8 !important; color: #fff !important; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.order-checkbox');
    const btnImportSelected = document.getElementById('btnImportSelected');
    const selectedCount = document.getElementById('selectedCount');
    const btnSelectAll = document.getElementById('btnSelectAll');

    function updateSelectedCount() {
        const checked = document.querySelectorAll('.order-checkbox:checked').length;
        selectedCount.textContent = checked;
        btnImportSelected.disabled = (checked === 0);
    }

    checkboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', updateSelectedCount);
    });

    if (btnSelectAll) {
        btnSelectAll.addEventListener('click', function() {
            const allChecked = document.querySelectorAll('.order-checkbox:checked').length === checkboxes.length;
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = !allChecked;
            });
            updateSelectedCount();
        });
    }

    // Confirmación antes de importar
    const formImportSelected = document.getElementById('formImportSelected');
    if (formImportSelected) {
        formImportSelected.addEventListener('submit', function(e) {
            const count = document.querySelectorAll('.order-checkbox:checked').length;
            if (count > 0) {
                if (!confirm('¿Seguro que deseas importar ' + count + ' pedido(s)?')) {
                    e.preventDefault();
                }
            }
        });
    }
});
</script>

{% endblock %}
