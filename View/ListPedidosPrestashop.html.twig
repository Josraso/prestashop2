{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="fas fa-shopping-cart"></i> Pedidos PrestaShop
            </h1>
        </div>
    </div>

    {# Si NO hay filtros, mostrar mensaje compacto #}
    {% if not fsc.hasFilters %}
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i>
            <strong>Utiliza los filtros para buscar pedidos.</strong> Puedes filtrar por ID, referencia, fecha, estado o importación.
        </div>
    {% endif %}

    {# Filtros COMPACTOS #}
    <div class="card shadow mb-4">
        <div class="card-header py-2">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter"></i> Filtros de Búsqueda
            </h6>
        </div>
        <div class="card-body">
            <form method="get" action="{{ fsc.url() }}">
                <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">ID desde:</label>
                        <input type="number" name="id_from" value="{{ fsc.filterIdFrom }}" class="form-control form-control-sm" placeholder="0" min="0"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">ID hasta:</label>
                        <input type="number" name="id_to" value="{{ fsc.filterIdTo }}" class="form-control form-control-sm" placeholder="0" min="0"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Referencia:</label>
                        <input type="text" name="reference" value="{{ fsc.filterReference }}" class="form-control form-control-sm" placeholder="XKBKNAET"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Fecha desde:</label>
                        <input type="date" name="date_from" value="{{ fsc.filterDateFrom }}" class="form-control form-control-sm"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Fecha hasta:</label>
                        <input type="date" name="date_to" value="{{ fsc.filterDateTo }}" class="form-control form-control-sm"/>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Estado PrestaShop:</label>
                        <select name="state" class="form-control form-control-sm">
                            <option value="0">Todos los estados</option>
                            {% for id, estado in fsc.estadosPrestaShop %}
                                <option value="{{ id }}" {% if fsc.filterState == id %}selected{% endif %}>{{ estado.nombre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-3 col-sm-4 mb-2">
                        <label class="small mb-1">Importación:</label>
                        <select name="importado" class="form-control form-control-sm">
                            <option value="todos" {% if fsc.filterImportado == 'todos' %}selected{% endif %}>Todos</option>
                            <option value="importado" {% if fsc.filterImportado == 'importado' %}selected{% endif %}>Importados</option>
                            <option value="pendiente" {% if fsc.filterImportado == 'pendiente' %}selected{% endif %}>Pendientes</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2">
                        <label class="small mb-1">Mostrar:</label>
                        <select name="limit" class="form-control form-control-sm">
                            <option value="50" {% if fsc.limit == 50 %}selected{% endif %}>50</option>
                            <option value="100" {% if fsc.limit == 100 %}selected{% endif %}>100</option>
                            <option value="200" {% if fsc.limit == 200 %}selected{% endif %}>200</option>
                            <option value="500" {% if fsc.limit == 500 %}selected{% endif %}>500</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2 align-self-end">
                        <button type="submit" class="btn btn-primary btn-sm btn-block">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                    <div class="col-lg-1 col-md-2 col-sm-3 mb-2 align-self-end">
                        <a href="{{ fsc.url() }}" class="btn btn-secondary btn-sm btn-block">
                            <i class="fas fa-times"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Solo mostrar estadísticas y tabla si hay filtros #}
    {% if fsc.hasFilters %}
        {# Estadísticas #}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-left-primary shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Encontrados</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.totalPedidos }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-left-success shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Importados</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.importados }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-left-warning shadow">
                    <div class="card-body py-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pendientes</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ fsc.pendientes }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Tabla de pedidos #}
        <div class="card shadow">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-table"></i> Pedidos (Página {{ fsc.page }} de {{ fsc.totalPages }})
                </h6>
                <form method="post" action="{{ fsc.url() }}" style="display: inline;">
                    <input type="hidden" name="action" value="export-csv"/>
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="fas fa-file-excel"></i> Exportar CSV
                    </button>
                </form>
            </div>
            <div class="card-body">
                {% if fsc.pedidos|length > 0 %}
                    <form method="post" id="formImportSelected">
                        <input type="hidden" name="action" value="import-selected"/>

                        {# Botones importar seleccionados #}
                        <div class="mb-3">
                            <button type="submit" class="btn btn-sm btn-primary" id="btnImportSelected" disabled>
                                <i class="fas fa-download"></i> Importar Seleccionados (<span id="selectedCount">0</span>)
                            </button>
                            <button type="button" class="btn btn-sm btn-secondary" id="btnSelectAll">
                                <i class="fas fa-check-square"></i> Seleccionar Todos Pendientes
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th width="30"></th>
                                        <th>ID</th>
                                        <th>Referencia</th>
                                        <th>Cliente</th>
                                        <th class="text-right">Total</th>
                                        <th>Fecha</th>
                                        <th>Estado PrestaShop</th>
                                        <th class="text-center">Importado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for pedido in fsc.pedidos %}
                                    <tr class="{% if pedido.importado %}table-success{% endif %}">
                                        <td>
                                            {% if not pedido.importado %}
                                                <input type="checkbox" name="order_ids[]" value="{{ pedido.id }}" class="order-checkbox"/>
                                            {% endif %}
                                        </td>
                                        <td><strong>{{ pedido.id }}</strong></td>
                                        <td><code>{{ pedido.reference }}</code></td>
                                        <td>
                                            {{ pedido.customer_name }}<br>
                                            <small class="text-muted">ID: {{ pedido.customer_id }}</small>
                                        </td>
                                        <td class="text-right">
                                            <strong>{{ pedido.total|number_format(2, ',', '.') }}€</strong>
                                        </td>
                                        <td>
                                            <small>{{ pedido.date|date('d/m/Y H:i') }}</small>
                                        </td>
                                        <td>
                                            {% if fsc.estadosPrestaShop[pedido.state] is defined %}
                                                <span class="badge badge-{{ fsc.estadosPrestaShop[pedido.state].color }}">
                                                    {{ fsc.estadosPrestaShop[pedido.state].nombre }}
                                                </span>
                                            {% else %}
                                                <span class="badge badge-secondary">Estado {{ pedido.state }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if pedido.importado %}
                                                <span class="badge badge-success" style="color: white;">
                                                    <i class="fas fa-check"></i> Sí
                                                </span>
                                                {% if pedido.idalbaran %}
                                                    <br><small class="text-muted">Alb. #{{ pedido.idalbaran }}</small><br>
                                                    <a href="EditAlbaranCliente?code={{ pedido.idalbaran }}" target="_blank" class="badge badge-primary mt-1">
                                                        <i class="fas fa-file-alt"></i> Ver
                                                    </a>
                                                {% endif %}
                                            {% else %}
                                                <span class="badge badge-warning" style="color: #333;">
                                                    <i class="fas fa-clock"></i> No
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-info btn-view-order" data-order-id="{{ pedido.id }}" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            {% if not pedido.importado %}
                                                <button type="button" class="btn btn-sm btn-primary btn-import-single" data-order-id="{{ pedido.id }}" title="Importar ahora">
                                                    <i class="fas fa-download"></i>
                                                </button>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </form>

                    {# Paginación #}
                    {% if fsc.totalPages > 1 %}
                        {% set paginationURL = fsc.url() ~ '?page={PAGE}&limit=' ~ fsc.limit ~ '&id_from=' ~ fsc.filterIdFrom ~ '&id_to=' ~ fsc.filterIdTo ~ '&reference=' ~ fsc.filterReference ~ '&date_from=' ~ fsc.filterDateFrom ~ '&date_to=' ~ fsc.filterDateTo ~ '&state=' ~ fsc.filterState ~ '&importado=' ~ fsc.filterImportado %}
                        <nav aria-label="Paginación" class="mt-3">
                            <ul class="pagination justify-content-center">
                                {% if fsc.page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': '1'}) }}"><i class="fas fa-angle-double-left"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': (fsc.page - 1)}) }}"><i class="fas fa-angle-left"></i></a>
                                    </li>
                                {% endif %}

                                {% for i in range(max(1, fsc.page - 2), min(fsc.totalPages, fsc.page + 2)) %}
                                    <li class="page-item {% if i == fsc.page %}active{% endif %}">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {% if fsc.page < fsc.totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': (fsc.page + 1)}) }}"><i class="fas fa-angle-right"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ paginationURL|replace({'{PAGE}': fsc.totalPages}) }}"><i class="fas fa-angle-double-right"></i></a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>No se encontraron pedidos con los criterios seleccionados.</strong>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

{# Modal para ver detalles del pedido #}
<div class="modal fade" id="orderDetailsModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsModalLabel">
                    <i class="fas fa-shopping-cart"></i> Detalles del Pedido
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="orderDetailsContent">
                <div class="text-center py-5">
                    <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    <p class="mt-3">Cargando detalles...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary d-none" id="btnImportFromModal">
                    <i class="fas fa-download"></i> Importar Pedido
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.border-left-primary { border-left: 0.25rem solid #4e73df !important; }
.border-left-success { border-left: 0.25rem solid #1cc88a !important; }
.border-left-warning { border-left: 0.25rem solid #f6c23e !important; }

/* Asegurar que el texto de los badges siempre sea visible */
.badge-primary { background-color: #007bff !important; color: #fff !important; }
.badge-secondary { background-color: #6c757d !important; color: #fff !important; }
.badge-success { background-color: #28a745 !important; color: #fff !important; }
.badge-danger { background-color: #dc3545 !important; color: #fff !important; }
.badge-warning { background-color: #ffc107 !important; color: #212529 !important; }
.badge-info { background-color: #17a2b8 !important; color: #fff !important; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.order-checkbox');
    const btnImportSelected = document.getElementById('btnImportSelected');
    const selectedCount = document.getElementById('selectedCount');
    const btnSelectAll = document.getElementById('btnSelectAll');

    function updateSelectedCount() {
        const checked = document.querySelectorAll('.order-checkbox:checked').length;
        selectedCount.textContent = checked;
        btnImportSelected.disabled = (checked === 0);
    }

    checkboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', updateSelectedCount);
    });

    if (btnSelectAll) {
        btnSelectAll.addEventListener('click', function() {
            const allChecked = document.querySelectorAll('.order-checkbox:checked').length === checkboxes.length;
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = !allChecked;
            });
            updateSelectedCount();
        });
    }

    // Confirmación antes de importar
    const formImportSelected = document.getElementById('formImportSelected');
    if (formImportSelected) {
        formImportSelected.addEventListener('submit', function(e) {
            const count = document.querySelectorAll('.order-checkbox:checked').length;
            if (count > 0) {
                if (!confirm('¿Seguro que deseas importar ' + count + ' pedido(s)?')) {
                    e.preventDefault();
                }
            }
        });
    }

    // Manejador para importar pedido individual
    const btnImportSingle = document.querySelectorAll('.btn-import-single');
    btnImportSingle.forEach(function(btn) {
        btn.addEventListener('click', function() {
            const orderId = this.getAttribute('data-order-id');
            if (confirm('¿Deseas importar el pedido #' + orderId + '?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.innerHTML = '<input type="hidden" name="action" value="import-order"/>' +
                                '<input type="hidden" name="order_id" value="' + orderId + '"/>';
                document.body.appendChild(form);
                form.submit();
            }
        });
    });

    // Manejador para ver detalles del pedido
    const btnViewOrders = document.querySelectorAll('.btn-view-order');
    btnViewOrders.forEach(function(btn) {
        btn.addEventListener('click', function() {
            const orderId = this.getAttribute('data-order-id');
            loadOrderDetails(orderId);
        });
    });

    // Función para cargar detalles del pedido vía AJAX
    function loadOrderDetails(orderId) {
        const modal = $('#orderDetailsModal');
        const content = $('#orderDetailsContent');
        const btnImport = $('#btnImportFromModal');

        // Mostrar modal con loading
        modal.modal('show');
        content.html('<div class="text-center py-5"><i class="fas fa-spinner fa-spin fa-3x text-primary"></i><p class="mt-3">Cargando detalles...</p></div>');
        btnImport.addClass('d-none');

        // Hacer petición AJAX
        $.ajax({
            url: '{{ fsc.url() }}',
            method: 'POST',
            data: {
                action: 'get-order-details',
                order_id: orderId
            },
            dataType: 'json',
            success: function(response) {
                console.log('Respuesta del servidor:', response);
                if (response.success && response.data) {
                    console.log('Líneas de productos:', response.data.lines);
                    console.log('Dirección facturación:', response.data.invoice_address);
                    console.log('Dirección envío:', response.data.delivery_address);
                    renderOrderDetails(response.data);

                    // Mostrar botón de importar si no está importado
                    if (!response.data.importado) {
                        btnImport.removeClass('d-none').attr('data-order-id', orderId);
                    }
                } else {
                    content.html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> ' + (response.error || 'Error al cargar detalles') + '</div>');
                }
            },
            error: function() {
                content.html('<div class="alert alert-danger"><i class="fas fa-exclamation-triangle"></i> Error de conexión al cargar detalles</div>');
            }
        });
    }

    // Función para renderizar los detalles del pedido en el modal
    function renderOrderDetails(data) {
        let html = '<div class="container-fluid">';

        // Cabecera con información básica
        html += '<div class="row mb-3">';
        html += '<div class="col-md-6">';
        html += '<h5><strong>Pedido #' + data.id + '</strong> - <code>' + data.reference + '</code></h5>';
        html += '<p class="mb-0"><i class="fas fa-calendar"></i> ' + formatDate(data.date_add) + '</p>';
        html += '<p class="mb-0"><i class="fas fa-credit-card"></i> ' + data.payment + '</p>';
        html += '</div>';
        html += '<div class="col-md-6 text-right">';
        html += '<h4 class="text-primary"><strong>' + formatMoney(data.total_paid) + '€</strong></h4>';
        if (data.importado) {
            html += '<span class="badge badge-success badge-lg"><i class="fas fa-check"></i> Importado</span>';
            if (data.codigo_albaran) {
                html += '<p class="mt-2"><small>Albarán: <strong>' + data.codigo_albaran + '</strong></small></p>';
            }
        } else {
            html += '<span class="badge badge-warning badge-lg"><i class="fas fa-clock"></i> Pendiente</span>';
        }
        html += '</div>';
        html += '</div>';

        html += '<hr>';

        // Cliente y direcciones
        html += '<div class="row mb-3">';

        // Información del cliente
        html += '<div class="col-md-4">';
        html += '<h6 class="text-primary"><i class="fas fa-user"></i> Cliente</h6>';
        html += '<p class="mb-0"><strong>' + (data.customer_name || '') + '</strong></p>';
        html += '<p class="mb-0"><small>' + (data.customer_email || '') + '</small></p>';
        html += '</div>';

        // Dirección de facturación
        html += '<div class="col-md-4">';
        html += '<h6 class="text-primary"><i class="fas fa-file-invoice"></i> Dirección de Facturación</h6>';
        if (data.invoice_address) {
            const inv = data.invoice_address;
            if (inv.company) html += '<p class="mb-0"><strong>' + inv.company + '</strong></p>';
            html += '<p class="mb-0">' + inv.firstname + ' ' + inv.lastname + '</p>';
            html += '<p class="mb-0">' + inv.address1 + '</p>';
            if (inv.address2) html += '<p class="mb-0">' + inv.address2 + '</p>';
            html += '<p class="mb-0">' + inv.postcode + ' - ' + inv.city + '</p>';
            if (inv.phone) html += '<p class="mb-0"><i class="fas fa-phone"></i> ' + inv.phone + '</p>';
            if (inv.vat_number) html += '<p class="mb-0"><small>NIF/CIF: ' + inv.vat_number + '</small></p>';
        }
        html += '</div>';

        // Dirección de envío
        html += '<div class="col-md-4">';
        html += '<h6 class="text-primary"><i class="fas fa-truck"></i> Dirección de Envío</h6>';
        if (data.delivery_address) {
            const del = data.delivery_address;
            if (del.company) html += '<p class="mb-0"><strong>' + del.company + '</strong></p>';
            html += '<p class="mb-0">' + del.firstname + ' ' + del.lastname + '</p>';
            html += '<p class="mb-0">' + del.address1 + '</p>';
            if (del.address2) html += '<p class="mb-0">' + del.address2 + '</p>';
            html += '<p class="mb-0">' + del.postcode + ' - ' + del.city + '</p>';
            if (del.phone) html += '<p class="mb-0"><i class="fas fa-phone"></i> ' + del.phone + '</p>';
        }
        html += '</div>';
        html += '</div>';

        html += '<hr>';

        // Líneas de productos
        html += '<h6 class="text-primary"><i class="fas fa-boxes"></i> Productos</h6>';
        html += '<div class="table-responsive">';
        html += '<table class="table table-sm table-bordered">';
        html += '<thead class="thead-light">';
        html += '<tr>';
        html += '<th>Referencia</th>';
        html += '<th>Producto</th>';
        html += '<th class="text-center">Cantidad</th>';
        html += '<th class="text-right">Precio Unit.</th>';
        html += '<th class="text-right">Total sin IVA</th>';
        html += '<th class="text-right">Total con IVA</th>';
        html += '</tr>';
        html += '</thead>';
        html += '<tbody>';

        if (data.lines && data.lines.length > 0) {
            data.lines.forEach(function(line) {
                html += '<tr>';
                html += '<td><code>' + (line.product_reference || '-') + '</code></td>';
                html += '<td>' + line.product_name + '</td>';
                html += '<td class="text-center">' + line.product_quantity + '</td>';
                html += '<td class="text-right">' + formatMoney(line.unit_price_tax_excl) + '€</td>';
                html += '<td class="text-right">' + formatMoney(line.total_price_tax_excl) + '€</td>';
                html += '<td class="text-right"><strong>' + formatMoney(line.total_price_tax_incl) + '€</strong></td>';
                html += '</tr>';
            });
        } else {
            html += '<tr><td colspan="6" class="text-center text-muted">Sin líneas de productos</td></tr>';
        }

        html += '</tbody>';
        html += '</table>';
        html += '</div>';

        // Totales
        html += '<div class="row mt-3">';
        html += '<div class="col-md-6 offset-md-6">';
        html += '<table class="table table-sm">';
        html += '<tr><td>Productos (sin IVA):</td><td class="text-right">' + formatMoney(data.total_products) + '€</td></tr>';
        html += '<tr><td>Productos (con IVA):</td><td class="text-right">' + formatMoney(data.total_products_wt) + '€</td></tr>';
        html += '<tr><td>Envío (sin IVA):</td><td class="text-right">' + formatMoney(data.total_shipping_tax_excl) + '€</td></tr>';
        html += '<tr><td>Envío (con IVA):</td><td class="text-right">' + formatMoney(data.total_shipping_tax_incl) + '€</td></tr>';
        if (data.total_discounts > 0) {
            html += '<tr><td>Descuentos:</td><td class="text-right text-danger">-' + formatMoney(data.total_discounts) + '€</td></tr>';
        }
        html += '<tr class="table-primary"><td><strong>TOTAL:</strong></td><td class="text-right"><strong>' + formatMoney(data.total_paid) + '€</strong></td></tr>';
        html += '</table>';
        html += '</div>';
        html += '</div>';

        html += '</div>';

        $('#orderDetailsContent').html(html);
    }

    // Utilidades de formato
    function formatMoney(value) {
        return parseFloat(value).toFixed(2).replace('.', ',');
    }

    function formatDate(dateStr) {
        const date = new Date(dateStr);
        return date.toLocaleDateString('es-ES') + ' ' + date.toLocaleTimeString('es-ES', {hour: '2-digit', minute: '2-digit'});
    }

    // Importar desde el modal
    $('#btnImportFromModal').on('click', function() {
        const orderId = $(this).attr('data-order-id');
        if (orderId && confirm('¿Deseas importar este pedido?')) {
            // Crear form y enviarlo
            const form = $('<form method="post"></form>');
            form.append('<input type="hidden" name="action" value="import-order"/>');
            form.append('<input type="hidden" name="order_id" value="' + orderId + '"/>');
            $('body').append(form);
            form.submit();
        }
    });

    // Asegurar que los botones de cerrar funcionen
    $('#orderDetailsModal .close, #orderDetailsModal [data-dismiss="modal"]').on('click', function() {
        $('#orderDetailsModal').modal('hide');
    });
});
</script>

{% endblock %}
